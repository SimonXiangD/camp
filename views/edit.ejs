<% layout('layouts/boilerplate') %>

    <div class="row ">
        <h1 class="text-center">新秘境</h1>
        <div class="col-6 offset-3 ">
            <br>

            <h2>更改秘境</h2>
            <form action="/mysteryLand/<%=ml._id%>?_method=PUT" method="POST">
                <label for="name" class="form-label">秘境名称</label>
                <input type="text" id="name" name="ml[title]" class="form-control" value="<%=ml.title%>">

                <label for="price" class="form-label">所需等级</label>
                <input type="number" id="price" name="ml[price]" class="form-control" value="<%=ml.price%>" min="0"
                    step="1">

                <label for="description" class="form-label">预探信息</label>
                <input type="text" id="description" name="ml[description]" class="form-control"
                    value="<%=ml.description%>">

                <label for="location" class="form-label">地点</label>
                <input type="text" id="location" name="ml[location]" class="form-control" value="<%=ml.location%>">

                <label for="image" class="form-label">图片网址</label>
                <input type="text" id="image" name="ml[image]" class="form-control" value="<%=ml.image%>">
                <button class="btn btn-info my-3">记录于芒高秘卷</button>
            </form>


            <a href="/home" class="btn btn-primary mb-3">回到秘境榜</a>
        </div>
    </div>