<% layout('layouts/boilerplate') %>
    <div class="container ">
        <div class="row">
            <h1>主页</h1>

            <h2> <a class="btn btn-success my-3 btn-lg" href="/addMLand">发现新秘境</a></h2>
            <h2> <a class="btn btn-info mb-3 btn-lg" href="/addName">添加秘境随机生成字符</a></h2>
        </div>

        <% for(let ml of mls) { %>

            <!-- <li> <a href="/mysteryLand/<%=ml._id%>">
                    <%=ml.title%>秘境
                </a> </li> -->

            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <!-- 
                        <img src="<%=ml.image===undefined ? 'https://source.unsplash.com/random/?mountain,sea,sky' :
                        ml.image%>" alt="" class="img-fluid"> -->
                        <img src="<%=(ml.image==undefined || ml.image=="" || ml.image=='undefined' )
                            ? 'https://source.unsplash.com/random/?mountain,sea,sky' : ml.image%>" alt=""
                            class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=ml.title %>
                            </h5>
                            <p class="card-text">
                                <%=ml.description %>
                            </p>
                            <p class="card-text">
                                <%=ml.location %>大陆
                            </p>
                            <p class="card-text">
                                <a href="/mysteryLand/<%=ml._id%>" class="btn btn-primary">
                                    <%=ml.title%>秘境
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>
    </div>